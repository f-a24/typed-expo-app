{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": ["tslint-react", "tslint-config-airbnb", "tslint-config-prettier"],
  "rules": {
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "prettier": [true, { "singleQuote": true }]
  }
}
